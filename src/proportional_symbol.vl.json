{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Basic choropleth (rate/ratio)",
  "width": 500, "height": 300,
  "title": "Income by country, 2017",
  "layer": [
    {
    "data": {
      "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/countries.geojson",
      "format": {"property": "features"}
  },
      "projection": {
        "type": "mercator"
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
        "data": {
      "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/countries_centroids.geojson",
      "format": {"property": "features"}
  },
  "transform": [
    {
      "lookup": "properties.country_code",
      "from": {
        "data": {
          "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
        },
        "key": "country_code",
        "fields": ["country", "region", "gdpPercap"]
      }
    }
],
      "projection": {
        "type": "mercator"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "properties.lon",
          "type": "quantitative"
        },
        "latitude": {
          "field": "properties.lat",
          "type": "quantitative"
        },
        "size": {"field": "gdpPercap", "type": "quantitative",
        "legend": {"title": "GDP per capita", "format": "$,.0f",
            "orient": "right"}},
        "color": {
      "field": "gdpPercap",
      "scale": {"scheme": "oranges"},
      "type": "quantitative",
      "legend": {"title": null}
},
"tooltip": [
     {"field": "country", "type": "nominal", "title": "Country"},
     {
       "field": "gdpPercap",
       "type": "quantitative",
       "title": "GDP per capita",
       "format": "$,.0f"
     }
]
      }
    }
  ],
  "config": {"view": {"stroke": "transparent"}}
}
