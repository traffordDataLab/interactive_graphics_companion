{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Gapminder bubble plot",
  "width": 400,
  "title": {"text": "Relationship between life expectancy and income, 2007"},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [{"filter": "datum.year == 2007"}],
  "mark": "point",
  "encoding": {
    "y": {
      "field": "lifeExp",
      "type": "quantitative",
      "scale": {"zero": false},
      "axis": {"title": "Life expectancy, years"}
    },
    "x": {
      "field": "gdpPercap",
      "type": "quantitative",
      "scale": {"type": "log", "domain": [1, 100000]},
      "axis": {"grid": false, "title": "GDP per capita ($)", "format": "$,.0f"}
    },
    "color": {"value": "#fc6721"},
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "lifeExp",
        "type": "quantitative",
        "title": "Age",
        "format": ".1f"
      },
      {
        "field": "gdpPercap",
        "type": "quantitative",
        "title": "Income",
        "format": "$,.0f"
      }
    ]
  },
  "config": {
    "axis": {"labelFont": "Roboto", "grid": false},
    "style": {"cell": {"stroke": "transparent"}}
  }
}
