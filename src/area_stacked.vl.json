{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 500,
  "description": "Stacked area chart",
  "title": {"text": "GDP per capita by country, 1952-2007", "offset": 20},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {"filter": {"field": "country", "oneOf": ["France", "Germany", "Ireland", "Italy"]}},
    {"aggregate": [{"op": "sum", "field": "gdpPercap", "as": "total"}],
    "groupby": ["year", "country"]}
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "year",
      "type": "temporal",
      "axis": {"format": "%Y", "grid": false, "title": "Year"}
    },
    "y": {
      "field": "total",
      "type": "quantitative",
      "axis": {"title": "Income (GDP per capita)", "titlePadding": 10, "format": "$,.0f"}
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "scale": {"scheme": "set2"},
      "legend": null
    },
    "opacity": {"value": 0.7}
  },
  "config": {"view": {"stroke": "transparent"}}
}
