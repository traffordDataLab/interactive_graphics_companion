{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Bar",
  "width": 400,
  "title": {"text": "Median income per person by continent, 2017", "offset": 10},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {"filter": "datum.year == '2017'"},
    {
      "aggregate": [{"op": "median", "field": "gdpPercap", "as": "median"}],
      "groupby": ["region"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "median",
      "type": "quantitative",
      "axis": {"ticks": false, "title": "Income per person", "format": "$,.0f"}
    },
    "y": {
      "field": "region",
      "type": "ordinal",
      "sort": {"op": "median", "field": "median", "order": "ascending"},
      "axis": {"grid": false, "title": null}
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {
        "domain": ["Africa", "Americas", "Asia", "Europe"],
        "range": ["#08C5ED", "#80D322", "#FF6973", "#FFDC25"]
    }, "legend": false
  },
    "tooltip": [
      {"field": "region", "type": "ordinal", "title": "Continent"},
      {
        "field": "median",
        "type": "quantitative",
        "title": "GDP per capita",
        "format": "$,.0f"
      }
    ]
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}
