{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 400,
  "description": "Bar chart",
  "title": {"text": "Median GDP per capita by continent, 2007"},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {"filter": "datum.year == '2007'"},
    {
      "aggregate": [{"op": "median", "field": "gdpPercap", "as": "median"}],
      "groupby": ["continent"]
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "median",
      "type": "quantitative",
      "axis": {"ticks": false, "title": "GDP per capita ($)", "format": "$,.0f"}
    },
    "y": {
      "field": "continent",
      "type": "ordinal",
      "sort": {"op": "median", "field": "median", "order": "ascending"},
      "axis": {"grid": false, "title": null}
    },
    "color": {"value": "#fc6721"},
    "tooltip": [
      {"field": "continent", "type": "ordinal", "title": "Continent"},
      {
        "field": "median",
        "type": "quantitative",
        "title": "Income",
        "format": "$,.0f"
      }
    ]
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}
