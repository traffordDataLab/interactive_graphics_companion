{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 400,
  "description": "Boxplot",
  "title": {"text": "Life expectancy distributions, 2007"},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {"filter": {"field": "year", "equal": "2007"}}],
  "mark": {
    "type": "boxplot",
    "extent": "min-max"
  },
  "encoding": {
    "x": {"field": "continent","type": "nominal",
    "axis": {"labelAngle": 0, "title": null}},
    "y": {
      "field": "lifeExp",
      "type": "quantitative",
      "axis": {"title": "Age (years)"}
    },
    "color": {"field": "continent", "type": "nominal",
    "scale": {"scheme": "set2"},
    "legend": null}
  },
  "config": {
    "axis": {"domainColor": "none"},
    "style": {"cell": {"stroke": "transparent"}}
  }
}
