{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Multiple line chart",
  "width": 500,
  "title": {"text": "Population by region, 1800-2018"},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder_dpop.csv"
  },
  "transform": [
    {"filter": {"field": "pop", "valid": true}},
    {
      "aggregate": [{"op": "sum", "field": "pop", "as": "total"}],
      "groupby": ["region", "year"]
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {
        "domain": false,
        "grid": false,
        "title": null,
        "format": "%Y",
        "tickSize": 0
      }
    },
    "y": {
      "field": "total",
      "type": "quantitative",
      "axis": null,
      "stack": "center"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "scale": {
        "domain": ["Africa", "Americas", "Asia", "Europe"],
        "range": ["#08C5ED", "#80D322", "#FF6973", "#FFDC25"]
      },
      "legend": null
    },
    "tooltip": [
      {
        "field": "year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {"field": "region", "type": "nominal", "title": "Region"},
      {
        "field": "total",
        "type": "quantitative",
        "title": "Population",
        "format": ",.0f"
      }
    ]
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}
