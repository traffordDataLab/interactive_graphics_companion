{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 300,
  "description": "Stacked area chart",
  "title": {"text": "GDP per capita by country, 1952-2007", "offset": 20},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "country",
        "oneOf": ["France", "Germany", "Ireland", "Italy"]
      }
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"grid": false, "title": ""}
    },
    "y": {
      "aggregate": "sum",
      "field": "gdpPercap",
      "type": "quantitative",
      "axis": {"title": "GDP per capita ($)", "format": "$,.0f"}
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "scale": {"scheme": "set2"},
      "legend": {"title": null}
    },
    "opacity": {"value": 0.7}
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}
