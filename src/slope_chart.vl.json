{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "width": 300,
  "description": "Slope chart",
  "title": {"text": "GDP per capita change, 1952 - 2007", "offset": 20},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder.csv"
  },
  "transform": [
    {"filter": {"field": "country", "oneOf": ["Iceland", "Norway"]}},
    {"filter": {"field": "year", "oneOf": ["1952", "2007"]}}
  ],
  "mark": {"type": "line", "point": {"filled": false, "fill": "white"}},
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "axis": {"title": null, "ticks": false, "labelAngle": 0}
    },
    "y": {
      "field": "gdpPercap",
      "type": "quantitative",
      "axis": {"title": null, "ticks": false, "labels": false}
    },
    "color": {"field": "country", "type": "nominal", "legend": null},
    "tooltip": [
      {"field": "country", "type": "nominal", "title": "Country"},
      {
        "field": "gdpPercap",
        "type": "quantitative",
        "title": "Income",
        "format": "$,.0f"
      }
    ]
  },
  "config": {
    "style": {"cell": {"stroke": "transparent"}},
    "axis": {"grid": false, "domainColor": null}
  }
}
