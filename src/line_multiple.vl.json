{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Multiple line chart",
  "width": 400,
  "title": {"text": "Average life expectancy by region, 1800-2018"},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder_ilex.csv"
  },
  "transform": [
    {"filter": {"field": "lifeExp", "valid": true}},
    {
      "aggregate": [{"op": "mean", "field": "lifeExp", "as": "average"}],
      "groupby": ["region", "year"]
    }
  ],
  "mark": "line",
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {"title": null, "grid": false}
    },
    "y": {"field": "average", "type": "quantitative", "axis": {"title": null}},
    "color": {
      "field": "region",
      "type": "nominal",
      "legend": {"orient": "bottom", "direction": "horizontal", "title": null}
    },
    "tooltip": [
      {
        "field": "year",
        "type": "temporal",
        "timeUnit": "year",
        "title": "Year"
      },
      {"field": "region", "type": "nominal", "title": "Region"},
      {
        "field": "average",
        "type": "quantitative",
        "title": "Age (years)",
        "format": ".1f"
      }
    ]
  },
  "config": {"style": {"cell": {"stroke": "transparent"}}}
}
