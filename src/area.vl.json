{
  "description": "Area",
  "width": 500,
  "title": {"text": "Share of people using the Internet in South Korea, 1990-2016", "offset": 10},
  "data": {
    "url": "data/gapminder_dintus.csv"
  },
  "transform": [
    {"filter": {"field": "internetUsers", "valid": true}},
    {"filter": {"field": "country", "equal": "South Korea"}}
  ],
  "mark": {"type": "area", "line": true},
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {"format": "%Y", "grid": false, "title": "Year"}
    },
    "y": {
      "field": "internetUsers",
      "type": "quantitative",
      "axis": {"title": "Internet users", "titlePadding": 10, "format": ".0%"}
    },
    "color": {"value": "#fc6721"},
    "opacity": {"value": 0.7}
  },
  "config": {"view": {"stroke": "transparent"}}
}
