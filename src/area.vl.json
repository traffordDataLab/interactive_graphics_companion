{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "Area",
  "width": 400,
  "title": {"text": "Average life expectancy in Europe, 1800-2018", "offset": 20},
  "data": {
    "url": "https://www.trafforddatalab.io/interactive_graphics_companion/data/gapminder_ilex.csv"
  },
  "transform": [
    {"filter": {"field": "region", "equal": "Europe"}},
    {"filter": {"field": "lifeExp", "valid": true}},
    {
      "aggregate": [{"op": "mean", "field": "lifeExp", "as": "average"}],
      "groupby": ["year"]
    }
  ],
  "mark": {"type": "area", "line": true},
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "timeUnit": "year",
      "axis": {"format": "%Y", "grid": false, "title": "Year"}
    },
    "y": {
      "field": "average",
      "type": "quantitative",
      "axis": {"title": "Age (years)", "format": ",.0f"}
    },
    "color": {"value": "#FFDC25"},
    "opacity": {"value": 0.7}
  },
  "config": {"view": {"stroke": "transparent"}}
}
